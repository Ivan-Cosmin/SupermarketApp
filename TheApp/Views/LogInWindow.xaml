<Window x:Class="TheApp.Views.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheApp.Views"
        xmlns:ctx="clr-namespace:TheApp.ViewModels"
        mc:Ignorable="d"
        Title="LogInWindow" Height="450" Width="800">
    <Window.DataContext>
        <ctx:LoginVM/>
    </Window.DataContext>

    <Grid>

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="LightGray" />
                <GradientStop Color="BlanchedAlmond" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <TextBlock 
            x:Name="LoginTitle" 
            HorizontalAlignment="Center" 
            Height="64" Width="210" 
            Margin="0,24,0,0"
            VerticalAlignment="Top"
            TextAlignment="Center" 
            FontSize="48" 
            FontWeight="Bold"><Run Language="en-en" Text="LOGIN"/></TextBlock>

        <TextBox x:Name="usernameBox" 
            HorizontalAlignment="Left"
            Height="23" Width="210" 
            VerticalAlignment="Top"
            Margin="343,156,0,0"
            Text="{Binding User.Username}"/>
        <TextBlock HorizontalAlignment="Left"
            Height="23" Width="86"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            TextAlignment="Center"
            FontSize="18" Margin="252,156,0,0" Text="Username"/>

        
        <TextBlock 
            HorizontalAlignment="Left"
            Height="23"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="86"
            TextAlignment="Center"
            FontSize="18" Margin="252,185,0,0"><Run Text="Password"/></TextBlock>
        <TextBox x:Name="passwordBox" 
            HorizontalAlignment="Left"
            Height="23" Width="210" 
            VerticalAlignment="Top"
            Margin="343,186,0,0"
            Text="{Binding User.Password}"/>

        <TextBlock 
            HorizontalAlignment="Left"
            Height="23"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="86"
            TextAlignment="Center"
            FontSize="18" Margin="252,212,0,0" Text="Type User"/>

        <ComboBox x:Name="typeUser" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Height="24"
            Margin="343,212,0,0"
            ItemsSource="{Binding TypeUsers}"
            SelectedIndex="0"
            Text="{Binding User.Type}"
            Width="210" IsReadOnly="True"
            />


        <Button
            Content="Log in"
            HorizontalAlignment="Center"
            Margin="0,257,0,0"
            VerticalAlignment="Top"
            Height="29" Width="218"
            FontSize="14"     
            Command="{Binding LoginCommand}"
            CommandParameter="{Binding User}">
          

            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>




    </Grid>
</Window>
